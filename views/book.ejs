<!DOCTYPE html>
<html lang="ja">
  <%- include('head.ejs') %>

  <body>
    <%- include('nav.ejs') %>
    <div class="container">
      <% data=book.data_json; %>
      <div class="card m-2 shadow">
        <div class="card-body">
          <h5 class="card-title"><%= data.summary.title %></h5>
          <p class="card-text">ISBN: <%= data.summary.isbn %></p>
          <p class="card-text">
            <%= data.summary.author %>, <%= data.summary.publisher %>, <%=
            data.summary.pubdate %>
          </p>
          <p class="card-text">
            <%= data.onix.ProductSupply.SupplyDetail.Price[0].PriceAmount %>å††
          </p>
          <% if (data.summary.cover !='' ) { %>
            <p>
              <img
                src="<%= data.summary.cover %>"
                class="img-thumbnail"
                alt="<%= book.title %>"
              />
            </p>
          <% } else { %>
          <p>
            <img
              src="/images/noimage.jpg"
              class="img-thumbnail"
              alt="<%= book.title %>"
            />
          </p>
          <% } %>
          <p class="card-text">
            <% for (var i=0; i < data.onix.CollateralDetail.TextContent.length; i++) { %>
              <% if (data.onix.CollateralDetail.TextContent[i].TextType=="03" ) { %>
                <%- data.onix.CollateralDetail.TextContent[i].Text.replace( /\r?\n/g, '<br />' ) %>
              <% } %>
            <% } %>
            <%# JSON.stringify(data, null, '\t' ) %>
          </p>
        </div>
      </div>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
